<configuration debug="false">

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>backend/logs/application.log</file>

        <append>false</append> <!-- This will overwrite the log file -->

        <encoder>
<!--            Extremely graceful for Tom Hombergs: https://reflectoring.io/logging-format-logback/-->
            <pattern>%d{yyyy-MM-dd} | %d{HH:mm:ss.SSS} | %-20.20thread | %5p | %-60.60logger{50} | %m%n</pattern>
        </encoder>

    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
